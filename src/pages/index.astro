---
import Layout from "../layouts/Layout.astro";
import StoryCard from "../components/StoryCard.astro";
import { fetchStories } from "../lib/notion";

const stories = await fetchStories();
export const prerender = false;
---

<Layout title="Unsent Stories">
  <section class="hero">
    <h1>Unsent Stories</h1>
    <p>Things I never sent. Things I never said.</p>
  </section>

  <section class="grid">
    {stories.map((story) => (
      <StoryCard story={story} />
    ))}
  </section>
</Layout>

<style>
.hero {
  max-width: 800px;
  margin: 5rem auto 3rem;
  text-align: center;
  padding: 0 2rem;
}

.hero h1 {
  font-size: 3.5rem;
  line-height: 1.1;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #fbbf24, #f87171, #ec4899);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  opacity: 0.8;
  font-size: 1.25rem;
  font-weight: 300;
  font-style: italic;
}

.grid {
  max-width: 1000px;
  margin: 3rem auto 6rem;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
  padding: 0 2rem;
}

@media (max-width: 768px) {
  .hero h1 {
    font-size: 2.5rem;
  }
  .grid {
    grid-template-columns: 1fr;
  }
}
</style>