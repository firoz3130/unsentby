---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Unsent Stories" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Unsent Stories</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
body {
  min-height: 100vh;
}
</style>